@model AutoGrader.Models.ViewModels.JoinClassViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="JoinClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassKey" class="control-label"></label>
                <input asp-for="ClassKey" class="form-control" />
                <span asp-validation-for="ClassKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Join" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>