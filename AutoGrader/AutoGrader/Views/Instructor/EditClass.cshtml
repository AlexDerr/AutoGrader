@model AutoGrader.Models.ViewModels.EditClassViewModel

@{
    ViewData["Title"] = "EditClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditClass</h2>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="EditClass">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="hidden">
				<label asp-for="ClassId" class="control-label"></label>
				<textarea asp-for="ClassId" class="form-control">@Model.ClassId</textarea>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

